program lab4;
    
    var
        F:array [1..50] of integer;
        N,i,sumOdd,sumEven,diff:integer;
        //P,S:real;
    begin  
        begin
            writeln('Введите размер массива N=');
            readln(N);
            for i:=1 to N do
        end;

        begin
            write('F[',i,']=');
            readln(F[i]);
        end;
        sumEven:=0;
        sumOdd:=0;
        for i:=1 to N do
        begin
            if F[i] mod 2=0 then // mod это оператор который вычисляет остаток целочисленого деления двух чисел
                sumEven:=sumEven+F[i]
            else
              sumOdd:=sumOdd+F[i]; //должен выводить нечетные числа
        end;
        
        diff:=sumEven-sumOdd;
        for i:= 1 to N do
        begin
            if F[i]>0 then 
            F[i]:= diff;
        end;
        //writeln('Сумма четных элементов массива:', S);

    
    
    
        writeln('Преобразованный массив');
        for i:=1 to N do
        write(F[i]:6);
        writeln;
    end.
