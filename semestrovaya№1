program simestrovaya;
    var
        x,y:real;

    begin
        writeln('Введите значения x:');
        readln(x);
        if x > 2 then
            y:= sin(3.14 * x)
        else -2 <= x and x <= 2 then
            y:=cos(3.14 * x)
        else (x < (-2)) then
            y:=sqr(x)+5;
        writeln('y=',y:6:2);
    end.
